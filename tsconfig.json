{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
    }
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}